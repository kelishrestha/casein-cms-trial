<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= casein_sort_link "Name", :name %></th>
      <th><%= casein_sort_link "Age", :age %></th>
      <th><%= casein_sort_link "Date of birth", :date_of_birth %></th>
      <th><%= casein_sort_link "Has paid", :has_paid %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <% customers.each do |customer| %>
